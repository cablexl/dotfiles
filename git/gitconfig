[diff]
    tool = vimdiff
[alias]
    aa = add --all
    amend = commit --amend
    b = branch
    ci = commit -v
    co = checkout
    di = diff
    fa = fetch --all
    ignored = !git ls-files -v | grep "^[[:lower:]]"
    pom = push origin master
    prune-local = !git branch --merged | tr -d '*' | grep -v dev | xargs -n1 git branch -d
    st = status
[push]
    default = simple
[color]
    ui = true
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    pager = less -r
[pull]
    rebase = true
